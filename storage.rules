rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() { return request.auth != null; }
    function isImage()    { return request.resource.contentType.matches('image/.*'); }
    function isVideo()    { return request.resource.contentType.matches('video/.*'); }
    function sizeUnder(n) { return request.resource.size < n; }
    function isAdmin() {
      // same logic as Firestore rules (mirror your approach)
      return isSignedIn() && request.auth.token.admin == true;
    }

    /* avatars */
    match /avatars/{uid}/{allPaths=**} {
      allow read: if true;
      allow create, update: if isSignedIn()
                            && request.auth.uid == uid
                            && isImage()
                            && sizeUnder(5 * 1024 * 1024 + 1);
      allow delete, list: if isSignedIn() && request.auth.uid == uid;
    }

    /* post media */
    match /posts/{uid}/{postId}/{filename} {
      allow read: if true;
      allow create: if isSignedIn()
                    && request.auth.uid == uid
                    && ((isImage() && sizeUnder(20 * 1024 * 1024)) ||
                        (request.resource.contentType.matches('video/.*') && sizeUnder(100 * 1024 * 1024)));
      allow delete: if isSignedIn() && request.auth.uid == uid;
      allow update: if false;
    }

    /* workout media (images or video) */
    match /workouts/{uid}/{fileId=**} {
      allow read: if true;
      allow create: if isSignedIn()
                    && request.auth.uid == uid
                    && (
                         (isImage() && sizeUnder(20 * 1024 * 1024)) ||
                         (isVideo() && sizeUnder(120 * 1024 * 1024))
                       );
      allow delete: if isSignedIn() && request.auth.uid == uid;
      allow update: if false;
    }

    /* comment media */
    match /posts/{postId}/comments/{commentId}/{filename} {
      allow read: if true;
      allow create: if isSignedIn()
                    && isImage()
                    && sizeUnder(15 * 1024 * 1024)
                    && exists(/databases/(default)/documents/posts/$(postId)/comments/$(commentId))
                    && get(/databases/(default)/documents/posts/$(postId)/comments/$(commentId)).data.uid == request.auth.uid;
      allow delete: if isSignedIn()
                    && exists(/databases/(default)/documents/posts/$(postId)/comments/$(commentId))
                    && (
                         get(/databases/(default)/documents/posts/$(postId)/comments/$(commentId)).data.uid == request.auth.uid ||
                         get(/databases/(default)/documents/posts/$(postId)).data.uid == request.auth.uid
                       );
      allow update: if false;
    }

    /* OPTIONAL: report evidence, admin-only read */
    match /reportEvidence/{reporterUid}/{postId}/{fileId=**} {
      // uploader must be the signed-in reporter
      allow create: if isSignedIn()
                    && request.auth.uid == reporterUid
                    && isImage()
                    && sizeUnder(10 * 1024 * 1024);
      // admin-only reads/deletes
      allow read, delete, list: if isAdmin();
      allow update: if false;
    }

    /* default deny */
    match /{allOtherPaths=**} {
      allow read, write: if false;
    }
  }
}
